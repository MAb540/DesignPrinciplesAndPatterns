{
  "compilerOptions": {
      "target": "esnext",
      "outDir": "dist/",
      "removeComments": true,
      "noEmitOnError": true,
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true, /* this will prevent TS errors from happening due to library errors */
      "module": "commonjs",
  },
  "exclude": ["node_modules"],
  "include": ["src/"]
}